<% layout("/layouts/boilerplate") -%>

<div class="row mt-3">
    <div class="col-8 offset-2">
        <h3><%= listing.title %></h3>
        <div class="card show-card">
            <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="<%= listing.title %>">

            <div class="card-body">
                <p class="card-text"><%= listing.description %></p>
                <ul class="list-group list-group-flush mb-3">
                    <li class="list-group-item">&#8377;<%= listing.price.toLocaleString("en-IN") %></li>
                    <li class="list-group-item"><%= listing.location %></li>
                    <li class="list-group-item"><%= listing.country %></li>
                </ul>
                <div class="mb-3">
                    <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark">Edit</a>
                    <form class="d-inline" method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </div>
                <hr/>
                <h4 class="mb-3">Leave a Review</h4>
                <form class="mb-3" method="POST" action="/listings/<%= listing._id %>/reviews" novalidate class="needs-validation">
                    <div class="mb-3">
                        <label for="rating" class="form-label">Rating</label>
                        <input type="range" min="1" max="5" step="1" id="rating" name="review[rating]" class="form-range">
                    </div>
                    <div class="mb-3">
                        <label for="comment" class="form-label">Comments</label>
                        <textarea id="comment" name="review[comment]" rows="5" class="form-control" required></textarea>
                    </div>
                    <button class="btn btn-outline-dark">Submit</button>
                </form>

                <% if(listing.reviews.length > 0) { %>
                <hr/>
                <h4 class="mb-3">All Reviews</h4>
                <div class="row">
                    <% for(let review of listing.reviews) { %>
                        <div class="col-md-6 mb-3">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">Rating: 
                                        <% for(let i = 0; i < review.rating; i++) { %>
                                            ‚≠ê
                                        <% } %>
                                    </h5>
                                    <p class="card-text"><%= review.comment %></p>
                                    <p class="card-text"><small class="text-muted">Reviewed on: <%= review.createdAt.toLocaleDateString() %></small></p>
                                    <form class="d-inline" method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                                        <button class="btn btn-sm btn-danger">Delete Review</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    <% } %>
                </div>
                <% } %>
            </div>
        </div>
    </div>
</div>